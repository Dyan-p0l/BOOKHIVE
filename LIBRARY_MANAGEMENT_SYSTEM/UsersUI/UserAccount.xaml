<Page x:Class="LIBRARY_MANAGEMENT_SYSTEM.UsersUI.UserAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM.UsersUI"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="UserAccount" Height="612" Width="874">
    <Grid Background="White">
        <Border CornerRadius="20"
        Background="Black"
        BorderBrush="Black"
        BorderThickness="2"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="228,25,0,0"
        Width="444"
        Height="154">

            <Grid>
                <Grid HorizontalAlignment="Left" Height="154" VerticalAlignment="Top" Width="154" Margin="14,-2,0,0">
                    <Image Source="/resources/avatars/avatar-male3.png"
                   HorizontalAlignment="Left"
                   Height="136"
                   Margin="10,7,0,0"
                   VerticalAlignment="Top"
                   Width="131"/>
                </Grid>

                <StackPanel HorizontalAlignment="Left"
                    Height="134"
                    Margin="160,20,0,0"
                    VerticalAlignment="Top"
                    Width="260">
                    <TextBlock x:Name="lblFullname" TextWrapping="Wrap"
                       Text="GABRIEL PHOENIX SEROJIHOS"
                       Height="85"
                       FontSize="26"
                       FontWeight="Bold"
                       FontFamily="Segoe UI Black"
                       Width="343"
                       Foreground="#FFCE5C"/>
                    <TextBlock x:Name="lblUserID" TextWrapping="Wrap"
                       Height="32"
                       FontSize="18"
                       Margin="0,5,0,0"
                       Text="UID: 42069911"
                       FontWeight="SemiBold"
                       Foreground="#FFCE5C"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border CornerRadius="20"
        Background="#FFCE5C"
        BorderBrush="#FFCE5C"
        BorderThickness="2"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="105,218,0,0"
        Width="678"
        Height="350">

            <Grid>
                <TextBox 
                 x:Name="txtUsername" Padding="5"
                 VerticalContentAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="22,103,0,0"
                 TextWrapping="Wrap"
                 Text="gabBiot"
                 VerticalAlignment="Top"
                 Width="291"
                 Height="49"
                 BorderBrush="#00ABADB3"
                 Background="#FFE2E2E2"
                 FontSize="18">
                    <TextBox.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                    </TextBox.Effect>
                </TextBox>

                <TextBox x:Name="txtFullname" Padding="5"
                 VerticalContentAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="364,103,0,0"
                 TextWrapping="Wrap"
                 Text="Gabriel Phoenix D. Serohijos"
                 VerticalAlignment="Top"
                 Width="291"
                 Height="49"
                 BorderBrush="#00ABADB3"
                 Background="#FFE2E2E2"
                 FontSize="18">
                    <TextBox.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                    </TextBox.Effect>
                </TextBox>

                <PasswordBox x:Name="txtPassword" Padding="5"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="22,205,0,0"
                     VerticalAlignment="Top"
                     Width="291"
                     Height="50"
                     Background="#FFE2E2E2"
                     BorderBrush="#00ABADB3"
                     FontSize="18">
                    <PasswordBox.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                    </PasswordBox.Effect>
                </PasswordBox>

                <PasswordBox x:Name="txtconfPass" Padding="5"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="364,205,0,0"
                     VerticalAlignment="Top"
                     Width="291"
                     Height="50"
                     Background="#FFE2E2E2"
                     BorderBrush="#00ABADB3"
                     FontSize="18">
                    <PasswordBox.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                    </PasswordBox.Effect>
                </PasswordBox>

                <Button x:Name="btnSave" Content="Save Changes"
                Click="btnSave_Click"
                HorizontalAlignment="Left"
                Height="60"
                Margin="159,280,0,0"
                VerticalAlignment="Top"
                Width="159"
                BorderBrush="#00707070"
                Background="#FF0C0C0C"
                FontSize="20"
                FontWeight="Bold"
                FontFamily="Segoe UI Black"
                Foreground="#FFFFD32C"/>

                <Button x:Name="btnCancel" Content="Cancel"
                Click="btnCancel_Click"
                HorizontalAlignment="Left"
                Height="60"
                Margin="364,280,0,0"
                VerticalAlignment="Top"
                Width="158"
                BorderBrush="#00121212"
                Background="#FFF9F8F4"
                Foreground="#FF0C0C0C"
                FontSize="20"
                FontWeight="Bold"
                FontFamily="Segoe UI Black"/>

                <Label Content="Username"
               HorizontalAlignment="Left"
               Margin="18,72,0,0"
               VerticalAlignment="Top"
               Width="99"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI Black"/>

                <Label Content="Full name"
               HorizontalAlignment="Left"
               Margin="360,75,0,0"
               VerticalAlignment="Top"
               Width="99"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI Black"/>

                <Label Content="Password"
               HorizontalAlignment="Left"
               Margin="18,173,0,0"
               VerticalAlignment="Top"
               Width="99"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI Black"/>

                <Label Content="Confirm New Password"
               HorizontalAlignment="Left"
               Margin="360,176,0,0"
               VerticalAlignment="Top"
               Width="199"
               FontSize="16"
               FontWeight="Bold"
               FontFamily="Segoe UI Black"/>
            </Grid>
        </Border>

        <Label Content="Update Account Information" HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" Height="49" Width="362" FontSize="26" FontWeight="Bold"/>
    </Grid>
</Page>
