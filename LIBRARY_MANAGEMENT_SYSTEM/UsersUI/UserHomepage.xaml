<Page
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM.UsersUI"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="LIBRARY_MANAGEMENT_SYSTEM.UsersUI.UserHomepage"
        mc:Ignorable="d"
        Title="UserHomepage" Height="612" Width="874">
    <Grid>

        <Grid HorizontalAlignment="Left" Height="95" Margin="0,10,0,0" VerticalAlignment="Top" Width="863">
            <TextBox VerticalContentAlignment="Center"  HorizontalAlignment="Left" Margin="171,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="496" Height="52" Background="#FFE2E2E2" BorderBrush="#00ABADB3">
                <TextBox.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                </TextBox.Effect>
            </TextBox>
            <Grid HorizontalAlignment="Left" Height="75" Margin="756,0,0,0" VerticalAlignment="Center" Width="79">
                <iconPacks:PackIconFontAwesome 
                    Kind="BellSolid" 
                    Width="50" 
                    Height="50" 
                    Foreground="Black"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <!-- Badge Count -->
                <Border Background="Red"
                    Width="30"
                    Height="30"
                    CornerRadius="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0">
                    <TextBlock Text="99"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Border>

            </Grid>
        </Grid>

    </Grid>
</Page>
