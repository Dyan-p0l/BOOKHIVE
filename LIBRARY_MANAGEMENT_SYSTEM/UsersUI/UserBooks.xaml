<Page x:Class="LIBRARY_MANAGEMENT_SYSTEM.UsersUI.UserBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM.UsersUI"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="UserBooks" Height="612" Width="874">
    <Grid Background="White">
        <Grid Background="Aqua" HorizontalAlignment="Center" Height="155" Margin="0,10,0,0" VerticalAlignment="Top" Width="854">
            <Grid.RowDefinitions>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="89*"/>
            </Grid.RowDefinitions>
            <Grid Background="Olive" HorizontalAlignment="Left" Height="147" Margin="109,5,0,0" VerticalAlignment="Top" Width="136" Grid.RowSpan="2"/>
            <Grid Background="Olive" HorizontalAlignment="Left" Height="147" Margin="365,4,0,0" VerticalAlignment="Top" Width="136" Grid.RowSpan="2"/>
            <Grid Background="Olive" HorizontalAlignment="Left" Height="147" Margin="617,4,0,0" VerticalAlignment="Top" Width="136" Grid.RowSpan="2"/>
        </Grid>
        <Grid Background="Black" HorizontalAlignment="Center" Height="299" Margin="0,229,0,0" VerticalAlignment="Top" Width="637">
            <Button HorizontalAlignment="Left" Height="197" VerticalAlignment="Top" Width="206" Margin="10,10,0,0" BorderBrush="#00707070" Background="#FFFF5C5C">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <iconPacks:PackIconFontAwesome Kind="BookMedicalSolid" Width="114" Height="88" Foreground="Black" Margin="0,0,0,10"/>
                    <TextBlock Text="REQUEST TO" FontSize="14"
                   HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="BORROW BOOK" FontSize="14"
                   HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button HorizontalAlignment="Left" Height="197" VerticalAlignment="Top" Width="206" Margin="221,10,0,0" BorderBrush="#00707070" Background="#FF02C4A1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <iconPacks:PackIconFontAwesome Kind="RecycleSolid" Width="114" Height="88" Foreground="#FFFFFDFD" Margin="0,0,0,10"/>
                    <TextBlock Text="ISSUE A" FontSize="14"
                    HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="BOOK RETURN" FontSize="14"
                    HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button HorizontalAlignment="Left" Height="103" Margin="431,11,0,0" VerticalAlignment="Top" Width="195" BorderBrush="#00707070" Background="#FF4994FF">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="102">
                    <iconPacks:PackIconFontAwesome Kind="RotateLeftSolid" Width="60" Height="50" Foreground="#FFFFFDFD" Margin="20,0,0,5"/>
                    <TextBlock Text="RENEW BOOK" FontSize="14"
                    HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button HorizontalAlignment="Left" Height="88" Margin="431,118,0,0" VerticalAlignment="Top" Width="195" BorderBrush="#00707070" Background="#FFFFD32C">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="102">
                    <iconPacks:PackIconFontAwesome Kind="RotateLeftSolid" Width="60" Height="50" Foreground="#FFFFFDFD" Margin="20,0,0,5"/>
                    <TextBlock Text="RENEW BOOK" FontSize="14"
                    HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button HorizontalAlignment="Left" Height="76" Margin="10,212,0,0" VerticalAlignment="Top" Width="305" BorderBrush="#00707070" Background="#FF6E1E1E">

            </Button>
            <Button HorizontalAlignment="Left" Height="76" Margin="318,212,0,0" VerticalAlignment="Top" Width="308" BorderBrush="#00707070" Background="#FFFFAF64">

            </Button>
        </Grid>

    </Grid>
</Page>
