<Page x:Class="LIBRARY_MANAGEMENT_SYSTEM.UsersUI.Potter1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM.UsersUI"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      Height="612" Width="878"
      Title="Potter1">

    <Grid Background="#1D1D1D">
        <Grid HorizontalAlignment="Left" Height="291" Margin="13,48,0,0" VerticalAlignment="Top" Width="858">
            <Grid Background="White" HorizontalAlignment="Left" Height="272" Margin="139,0,0,0" VerticalAlignment="Center" Width="181">
                <Image Source="/resources/covers/cover.jpg" HorizontalAlignment="Left" Height="260" VerticalAlignment="Top" Width="195" Margin="6,4,0,0"/>
            </Grid>
            <Grid HorizontalAlignment="Left" Height="202" Margin="306,0,0,0" VerticalAlignment="Center" Width="426">
                <Label Content="Title : Harry Potter and the Deathly" HorizontalAlignment="Center" VerticalAlignment="Top" Height="37" Width="376" FontSize="22" FontWeight="Bold" Margin="0,-2,0,0" RenderTransformOrigin="0.5,0.5" Foreground="#FFFDFDFD">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.039"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Label Content="Author : J. K. Rowling" HorizontalAlignment="Left" Margin="32,63,0,0" VerticalAlignment="Top" Height="35" Width="203" FontSize="16" FontWeight="Bold" Foreground="#FFFFCE5C"/>
                <Button Click="Submit_Click" Content="Borrow" HorizontalAlignment="Left" Height="47" Margin="39,149,0,0" VerticalAlignment="Top" Width="110" BorderBrush="#00707070" Background="#FFFF5C5C" FontWeight="Bold"/>
                <Button Click="Playlist_Click" Content="Add to Collection" HorizontalAlignment="Left" Height="47" Margin="162,149,0,0" VerticalAlignment="Top" Width="115" BorderBrush="#00707070" Background="#FFFFCE5C" FontWeight="Bold"/>
                <Label Content="Hallows" HorizontalAlignment="Left" Margin="31,28,0,0" VerticalAlignment="Top" Height="36" Width="220" FontSize="22" FontWeight="Bold" Foreground="#FFFDFDFD"/>
                <Label Content="Genre: Fantasy, Adventure, Magic" Margin="33,96,9,0" VerticalAlignment="Top" Height="31" FontWeight="Bold" Foreground="#FFFAF7F0"/>
            </Grid>
            <Button Click="backBtn" HorizontalAlignment="Left" Height="56" Margin="20,28,0,0" VerticalAlignment="Top" Width="62" BorderBrush="#00707070" Background="#00000000">
                <iconPacks:PackIconFontAwesome Kind="ArrowLeftSolid" Width="52" Height="46" Foreground="#FFF7F7F7" HorizontalAlignment="Center"/>
            </Button>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="240" Margin="88,322,0,0" VerticalAlignment="Top" Width="727">
            <Label Content="DESCRIPTION:" HorizontalAlignment="Left" Height="30" Margin="16,33,0,0" VerticalAlignment="Top" Width="129" Foreground="#FFFDFDFD" FontSize="16" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Height="139" Margin="20,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="697" Foreground="#FFFFCE5C" FontSize="16" FontWeight="Bold" TextAlignment="Justify"><Run Text="Harry Potter is a young wizard who discovers his magical heritage after an invitation."/><LineBreak/><Run Text="At Hogwarts School of Witchcraft and Wizardry, he learns spells, makes friends, uncovers mysteries. Throughout the series, Harry faces many dangerous challenges and battles the dark wizard Voldemort. The story explores themes of friendship, courage, love, and sacrifice in a magical world."/></TextBlock>
        </Grid>

    </Grid>
</Page>
