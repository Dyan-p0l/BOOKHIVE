<Page x:Class="LIBRARY_MANAGEMENT_SYSTEM.UsersUI.homeBooks.Aot2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM.UsersUI.homeBooks"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      Height="612" Width="878"
      Title="Aot2">

    <Grid Background="#1D1D1D">
        <Grid HorizontalAlignment="Left" Height="291" Margin="13,48,0,0" VerticalAlignment="Top" Width="858">
            <Grid Background="White" HorizontalAlignment="Left" Height="272" Margin="139,0,0,0" VerticalAlignment="Center" Width="181">
                <Image Source="/resources/covers/aotcover2.jpg" HorizontalAlignment="Left" Height="260" VerticalAlignment="Top" Width="195" Margin="4,4,0,0"/>
            </Grid>
            <Grid HorizontalAlignment="Left" Height="202" Margin="306,0,0,0" VerticalAlignment="Center" Width="426">
                <Label Content="Title: Attack On Titan Volume 12" HorizontalAlignment="Center" VerticalAlignment="Top" Height="37" Width="376" FontSize="22" FontWeight="Bold" Margin="0,-2,0,0" RenderTransformOrigin="0.5,0.5" Foreground="#FFFDFDFD">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.039"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Label Content="Author : Hajime Isayama" HorizontalAlignment="Left" Margin="32,63,0,0" VerticalAlignment="Top" Height="35" Width="203" FontSize="16" FontWeight="Bold" Foreground="#FFFFCE5C"/>
                <Button Content="Borrow" HorizontalAlignment="Left" Height="47" Margin="39,149,0,0" VerticalAlignment="Top" Width="110" BorderBrush="#00707070" Background="#FFFF5C5C" FontWeight="Bold"/>
                <Button Content="Add to Collection" HorizontalAlignment="Left" Height="47" Margin="162,149,0,0" VerticalAlignment="Top" Width="115" BorderBrush="#00707070" Background="#FFFFCE5C" FontWeight="Bold"/>
                <Label Content=" 進撃の巨人" HorizontalAlignment="Left" Margin="31,28,0,0" VerticalAlignment="Top" Height="36" Width="220" FontSize="22" FontWeight="Bold" Foreground="#FFFDFDFD"/>
                <Label Content="Genre: Action, Dark Fantasy, Post-Apocalyptic, Drama" Margin="33,96,9,0" VerticalAlignment="Top" Height="31" FontWeight="Bold" Foreground="#FFFAF7F0"/>
            </Grid>
            <Button Click="backBtn" HorizontalAlignment="Left" Height="56" Margin="20,28,0,0" VerticalAlignment="Top" Width="62" BorderBrush="#00707070" Background="#00000000">
                <iconPacks:PackIconFontAwesome Kind="ArrowLeftSolid" Width="52" Height="46" Foreground="#FFF7F7F7" HorizontalAlignment="Center"/>
            </Button>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="240" Margin="88,322,0,0" VerticalAlignment="Top" Width="727">
            <Label Content="DESCRIPTION:" HorizontalAlignment="Left" Height="30" Margin="16,33,0,0" VerticalAlignment="Top" Width="129" Foreground="#FFFDFDFD" FontSize="16" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Height="139" Margin="20,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="697" Foreground="#FFFFCE5C" FontSize="16" FontWeight="Bold" TextAlignment="Justify"><Run Text="Attack on Titan follows humanity's struggle to survive against giant humanoid Titans."/><LineBreak/><Run Text="The story centers on Eren Yeager, who joins the military to fight Titans after his town is destroyed. Alongside friends Mikasa and Armin, he uncovers dark secrets behind the Titans’ origins and human conflicts. The series explores themes of freedom, sacrifice, fear, and the harsh reality of war."/></TextBlock>
        </Grid>

    </Grid>
</Page>
