            <Grid HorizontalAlignment="Left" Height="202" Margin="306,0,0,0" VerticalAlignment="Center" Width="466">
                <Label Content="Title : CONTROL SYSTEMS ENGINEERING" HorizontalAlignment="Left" VerticalAlignment="Top" Height="37" Width="446" FontSize="22" FontWeight="Bold" Margin="25,-2,0,0" RenderTransformOrigin="0.5,0.5" Foreground="#FFFDFDFD">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.039"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
                <Label Content="Author : Norman S. Nise" HorizontalAlignment="Left" Margin="32,63,0,0" VerticalAlignment="Top" Height="35" Width="203" FontSize="16" FontWeight="Bold" Foreground="#FFFFCE5C"/>
                <Button Content="Borrow" HorizontalAlignment="Left" Height="47" Margin="39,149,0,0" VerticalAlignment="Top" Width="110" BorderBrush="#00707070" Background="#FFFF5C5C" FontWeight="Bold"/>
                <Button Content="Add to Collection" HorizontalAlignment="Left" Height="47" Margin="162,149,0,0" VerticalAlignment="Top" Width="115" BorderBrush="#00707070" Background="#FFFFCE5C" FontWeight="Bold"/>
                <Label Content="Genre: Engineering, Educational, Technical, Non-fiction, &#xD;&#xA;Systems Theory, Automation, Mathematics" Margin="33,96,9,0" VerticalAlignment="Top" Height="48" FontWeight="Bold" Foreground="#FFFAF7F0"/>
