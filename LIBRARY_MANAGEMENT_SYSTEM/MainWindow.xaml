<Window x:Class="LIBRARY_MANAGEMENT_SYSTEM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="730" Width="930">
    <Grid>
        <Grid Margin="465,0,0,0" Width="462">
            <Image Source="/resources/img-vectors/logLib.png" Margin="-29,0,-52,0"/>
            <Label Content="Buzzing with Knowledge,&#xD;&#xA; One Book at a Time&#xA;&#xA;" HorizontalAlignment="Left" Margin="76,597,0,0" VerticalAlignment="Top" Width="362" FontSize="28" FontFamily="Segoe UI Black" Foreground="Black"/>
        </Grid>
        <Grid>
            <Grid HorizontalAlignment="Left" Height="694" Margin="10,0,0,0" VerticalAlignment="Center" Width="478">
                <Grid HorizontalAlignment="Left" Height="67" Margin="112,10,0,0" VerticalAlignment="Top" Width="266">
                    <Image Source="/resources/img-vectors/logoLib.png" HorizontalAlignment="Left" Height="57" Margin="48,10,0,0" VerticalAlignment="Top" Width="267" RenderTransformOrigin="0.412,-0.001"/>
                </Grid>
                <Grid Background="White" HorizontalAlignment="Center" Height="298" VerticalAlignment="Top" Width="458" Margin="0,210,0,0">
                    <TextBox VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="402" Height="56" FontSize="22" FontFamily="Segoe UI Black" BorderBrush="#00ABADB3" Background="#FFE6E6E6">
                        <TextBox.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                        </TextBox.Effect>
                    </TextBox>
                    <Label Content="Username:" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top" Height="49" Width="178" FontSize="24" FontFamily="Arial Black" Foreground="Black"/>
                    <Label Content="Password:" HorizontalAlignment="Left" Margin="28,147,0,0" VerticalAlignment="Top" Height="49" Width="178" FontSize="24" FontFamily="Arial Black" Foreground="Black"/>
                    <PasswordBox VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="53" Margin="0,199,0,0" VerticalAlignment="Top" Width="401" FontSize="22" BorderBrush="#00ABADB3" Background="#FFE6E6E6">
                        <PasswordBox.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="8" Opacity="0.3"/>
                        </PasswordBox.Effect>
                    </PasswordBox>
                </Grid>
                <Grid HorizontalAlignment="Center" Height="176" Margin="0,508,0,0" VerticalAlignment="Top" Width="324">
                    <Button Height="64" Width="160" Content="LOG IN" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="0" FontSize="20" FontFamily="Arial Black" Foreground="Black" Background="#FFCE5C" Margin="0,-5,0,0"/>
                    <Button Height="64" Width="160" Content="SIGN UP" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top"  FontSize="20" FontFamily="Arial Black" Foreground="#FFCE5C" Background="Black" Click="openReg_Click"/>
                    <Label Content="OR" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial Black" Foreground="Black"/>
                </Grid>
                <Grid HorizontalAlignment="Center" Height="115" Margin="0,82,0,0" VerticalAlignment="Top" Width="458">
                    <Label Content="LIBRARY MANAGEMENT" HorizontalAlignment="Left" Margin="10,10,0,57" Width="448" FontSize="32" FontWeight="Bold" FontFamily="Arial Black" Foreground="Black"/>
                    <Label Content="SYSTEM" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top" Height="48" Width="168" FontSize="32" FontWeight="Bold" FontFamily="Arial Black" Foreground="Black"/>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
