<Page x:Class="LIBRARY_MANAGEMENT_SYSTEM.AdminUI.BookManage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM.AdminUI"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"

        mc:Ignorable="d"
        Title="BookManage" Height="616" Width="878">
    <Grid Background="White">
        <Button Click="showBooks" Content="VIEW BOOKS LISTS" HorizontalAlignment="Left" Height="113" Margin="504,132,0,0" VerticalAlignment="Top" Width="222" FontWeight="Bold" FontSize="16" BorderBrush="#00707070"/>
        <Button Click="showAdd" Content="ADD A BOOK" HorizontalAlignment="Left" Height="113" Margin="130,132,0,0" VerticalAlignment="Top" Width="222" FontWeight="Bold" FontSize="16" BorderBrush="#00707070"/>
        <Button Click="showRemove" Content="REMOVE BOOKS" HorizontalAlignment="Left" Height="113" Margin="130,308,0,0" VerticalAlignment="Top" Width="222" FontWeight="Bold" FontSize="16" BorderBrush="#00707070"/>
        <Button Click="showBookLog" Content="VIEW BOOK LOGS" HorizontalAlignment="Left" Height="113" Margin="504,308,0,0" VerticalAlignment="Top" Width="222" FontWeight="Bold" FontSize="16" BorderBrush="#00707070"/>

    </Grid>
</Page>
