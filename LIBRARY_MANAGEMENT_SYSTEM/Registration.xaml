<Window x:Class="LIBRARY_MANAGEMENT_SYSTEM.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Registration" Height="730" Width="930" Icon="/resources/img-vectors/logo-bookhive.ico">
    <Grid>
        <Grid>
            <Grid HorizontalAlignment="Left" Height="694" Margin="465,20,0,0" VerticalAlignment="Top" Width="478">
                <Grid HorizontalAlignment="Left" Height="83" Margin="112,-6,0,0" VerticalAlignment="Top" Width="266">
                    <Image Source="/resources/img-vectors/logoLib.png" HorizontalAlignment="Left" Height="63" Margin="33,0,0,0" VerticalAlignment="Center" Width="206" RenderTransformOrigin="0.505,1.025"/>
                </Grid>
                <Grid Background="White" HorizontalAlignment="Left" Height="398" VerticalAlignment="Center" Width="458">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="313*"/>
                        <ColumnDefinition Width="145*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtFullname" HorizontalAlignment="Left" Margin="58,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Height="44" FontSize="22" FontFamily="Segoe UI Black" Grid.ColumnSpan="2" BorderBrush="#00ABADB3" Background="#FFE6E6E6">
                        <TextBox.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                        </TextBox.Effect>
                    </TextBox>
                    <Label Content="Enter Full name:" HorizontalAlignment="Left" Margin="60,7,0,0" VerticalAlignment="Top" Height="49" Width="178" FontSize="20" FontFamily="Segoe UI Black" Foreground="Black"/>
                    <Label Content="Enter Password:" HorizontalAlignment="Left" Margin="60,195,0,0" VerticalAlignment="Top" Height="49" Width="300" FontSize="20" FontFamily="Segoe UI Black" Foreground="Black" Grid.ColumnSpan="2"/>
                    <Label Content="Enter Username:" HorizontalAlignment="Left" Margin="60,100,0,0" VerticalAlignment="Top" Height="49" Width="178" FontSize="20" FontFamily="Segoe UI Black" Foreground="Black"/>
                    <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="58,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Height="44" FontSize="22" FontFamily="Segoe UI Black" Grid.ColumnSpan="2" BorderBrush="#00ABADB3" Background="#FFE6E6E6">
                        <TextBox.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                        </TextBox.Effect>
                    </TextBox>
                    <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="58,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Height="44" FontSize="22" FontFamily="Segoe UI Black" Grid.ColumnSpan="2" BorderBrush="#00ABADB3" Background="#FFE6E6E6">
                        <TextBox.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                        </TextBox.Effect>
                    </TextBox>
                    <Label Content="Confirm Password:" HorizontalAlignment="Left" Margin="60,287,0,0" VerticalAlignment="Top" Height="49" Width="300" FontSize="20" FontFamily="Segoe UI Black" Foreground="Black" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="txtconfPassword" HorizontalAlignment="Left" Margin="58,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Height="44" FontSize="22" FontFamily="Segoe UI Black" Grid.ColumnSpan="2" BorderBrush="#00ABADB3" Background="#FFE6E6E6">
                        <TextBox.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="8" Opacity="0.3"/>
                        </TextBox.Effect>
                    </TextBox>
                </Grid>
                <Grid HorizontalAlignment="Center" Height="130" Margin="0,532,0,0" VerticalAlignment="Top" Width="252">
                    <Button Height="75" Width="232" Content="Create account" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="0" FontSize="20" FontFamily="Arial Black" Foreground="#FFCE5C" Background="Black" Margin="0,45,0,0" Click="Register"/>
                </Grid>
                <Grid HorizontalAlignment="Center" Height="69" Margin="0,82,0,0" VerticalAlignment="Top" Width="458">
                    <Label Content="Create your account" HorizontalAlignment="Center" VerticalAlignment="Top" Height="59" Width="374" FontSize="32" FontWeight="Bold" FontFamily="Segoe UI Black" Foreground="#FF262828"/>
                </Grid>
            </Grid>
            <Grid HorizontalAlignment="Left" Height="714" VerticalAlignment="Center" Width="465">
                <Image Source="/resources/img-vectors/regLib.png" HorizontalAlignment="Left" Height="747" VerticalAlignment="Center" Width="472"/>
                <Label Content="Easily manage your library&#xD;&#xA;needs — search, borrow, and &#xD;&#xA;return books anytime, all in&#xD;&#xA;one place!" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Foreground="#FF1C1C1C" FontWeight="Bold" FontSize="30" Height="179" Width="563"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
